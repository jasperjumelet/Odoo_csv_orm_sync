<?xml version="1.0"?>
<odoo>
  <record id="device_model_action" model="ir.actions.act_window">
    <field name="name">Device action</field>
    <field name="res_model">device.model</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="device_model_view_tree" model="ir.ui.view">
    <field name="name">device.model.tree</field>
    <field name="model">device.model</field>
    <field name="arch" type="xml">
      <tree string="Device">
        <field name="name"/>
        <field name="description"/>
        <field name="code"/>
        <field name="expire_date"/>
      </tree>
    </field>
  </record>
</odoo>

